                                <div class="text">
                                    <div class="title">@item.PointName</div>
                                    <div class="message"></div>
                                    <div class="expire-info">有效期限 @item.Deadline.ToString("yyyy/MM/dd")</div>
                                </div>
                                <div class="points pad-rl-5 text-center">
