                                <p>目前沒有已用的點數</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model.getpointViewModels)
                        {
                            <div class="dynamic-block table-row marg-rl-20 pad-tb-10 get-point fade out">
