                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="intervals-btn toggle-btn-interval marg-t-10 marg-r-10 text-center toggle dat_@count" role="button">@j</span>
                                                    }
                                                }

                                            }
                                        }
                                        count++;

                                    }
                                </div>
                            </div>
                            <!-- third row -->
                            <div class="categories-wrap flex ">
                                @{count = 0; interest = false;}
