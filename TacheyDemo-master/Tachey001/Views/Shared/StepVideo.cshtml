@model Tachey001.ViewModel.Course.StepGroup


@*@using (Html.BeginForm("Step", "Courses", new { id = ViewBag.Id, CourseId = ViewBag.CourseId }))
{
    @Html.AntiForgeryToken()*@

    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-sm-11 m-4">
                @*預覽影片*@
                <div class="row m-3 mb-5 border-bottom">
                    <div class="w-100">
                        <label class="text-black-50">課程預覽影片 - 上傳一個 1 ~ 3 分鐘的課程大綱影片</label>
                    </div>
                    <div class="w-100">
                        <label for="previewVideo" class="btn btn-outline-secondary btn-outline-orange btn-lg py-2 px-5 mr-3 fs-5 text-black-50"><i class="fas fa-cloud-upload-alt mx-2"></i>上傳</label>
                        <input type="file" class="custom-file-input" id="previewVideo" data-CourseID="@ViewBag.CourseId" style="width:5px" />
                    </div>
                    <span class="text-black-50 fs-5">強烈建議影片格式：長寬比為 16 : 9，解析度為 1080p 畫質。</span>
                    <label for="basic-url" class="text-black-50 fs-5">建議檔案格式 mp4, mov</label>
                </div>
                <div class="row m-3 mb-5">
                    <video controls="controls" class="w-100 border" id="previewVideoPlayBox">
                        <source src="@Model.course.PreviewVideo" type="video/mp4" />
                    </video>
                </div>

                <div class="row m-3 mb-5 border-bottom">
                    <div class="w-100">
                        <label class="text-black-50">課程影片 - 上傳完整的課程影片</label>
                    </div>
                    <span class="text-black-50 fs-5">強烈建議影片格式：長寬比為 16 : 9，解析度為 1080p 畫質。</span>
                    <label for="basic-url" class="text-black-50 fs-5">建議檔案格式 mp4, mov</label>
                </div>
                @*課程影片*@
            <div class="row m-3">

                @foreach (var item in Model.courseUnit)
                {
                    @Html.Partial("_VideoPost", item)
                }

            </div>

                <div class="row m-3">
                    <button type="submit" onclick="changePage(7)" class="btn btn-outline-secondary btn-lg px-5">
                        下一步
                    </button>
                </div>

            </div>
            <div class="col-lg-4 col-sm-11 m-3 text-black-50 text-justify">
                <div class="row bg-light-gray px-3">
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>影片製作提醒
                        </h6>
                        <p class="line-height">
                            預覽影片須附上字幕，並且注意影像畫面清晰、有流暢的口條、無噴 Mic 及背景雜音。 而影片中須包含課程目標，簡短內容介紹、自我介紹以及教學方式，並且注意畫面素材的使用版權。 送出審核前請確認內容符合『提案審核標準 - 影片』。
                        </p>
                        <a href=""
                           class="
                  w-100
                  text-right text-secondary text-decoration-none
                  my-3
                ">>> 詳細內容</a>
                    </div>
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>沒有拍攝經驗怎麼辦？
                        </h6>
                        <p class="line-height">
                            不同的課程領域有不同的影像呈現方式，選擇你最適合的影片拍攝方式吧！
                        </p>
                        <a href=""
                           class="
                  w-100
                  text-right text-secondary text-decoration-none
                  my-3
                ">>> 影片拍攝技巧</a>
                    </div>
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>需要攝影協助？
                        </h6>
                        <p class="line-height">
                            若你不擅長攝影，希望向 Hahow 申請課程製作服務，請詳看課程製作服務申請辦法，完成基本資料後向 Hahow 提出申請。
                        </p>
                        <a href=""
                           class="
                    w-100
                    text-right text-secondary text-decoration-none
                    my-3
                  ">>> 攝影服務</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

@*  *@}