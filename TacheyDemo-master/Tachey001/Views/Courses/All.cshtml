                <div class="coursebtn">
                    <button class="text-secondary" id="hot">熱門課程</button>
                    @*<button class="btn btn-pur m-auto">@Html.ActionLink("一步步開始提案", "AllHot", "Courses", new { @class = "text-white text-decoration-none" })</button>*@
