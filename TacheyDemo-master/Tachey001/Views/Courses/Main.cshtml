<h1>Hahow 線上課程</h1>
<!-- 課程影片區 -->
<section class="hero_wrap">
    <div class="container">
        <!-- Breadcrumb 區塊 -->
        <nav aria-label="breadcrumb ">
            <ol class="breadcrumb bg-transparent">
                <li class="breadcrumb-item text-white"><a href="@Url.Action("All","Courses")">所有課程</a></li>
                <li class="breadcrumb-item text-white"><a href="@Url.Action("FindCategory","Courses", new { category = Model.Main_Video.CategoryName})">@Model.Main_Video.CategoryName</a></li>
                <li class="breadcrumb-item  text-white active"><a href="@Url.Action("FindCategory","Courses", new { category = Model.Main_Video.DetailName})">@Model.Main_Video.DetailName</a></li>
            </ol>
        </nav>
        <!-- title 區塊 -->
        <h2 class="title text-center">@Model.Main_Video.Course.Title</h2>

        <!-- 主要內容 -->
        <div class="main_wrap col-12">
            <!-- 影片區 -->
            <div class="video_wrap col-12 col-sm-12 col-lg-8">
                <iframe name="VideoIframe" width="100%" height="100%" src="@Model.Main_Video.Course.PreviewVideo"
                        title="video player" frameborder="0"
                        scrolling="no"
                        allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
            <!-- 選單區 -->
            <div class="menu_wrap col-12 col-sm-12 col-lg-4">
                <div class="title col-12">
                    <div class="col-10 p-0">
                        <p>@Model.Main_Video.courseChapters.Count() 個章節，@Model.Main_Video.courseUnits.Count() 段單元，共 @Model.Main_Video.Course.TotalMinTime 分鐘</p>
                        <div>
                            @*<span>當前單元</span>*@
                            <a href="@Model.Main_Video.Course.PreviewVideo" target="VideoIframe">
                                <span>試看</span>
                            </a>
                        </div>
                    </div>
                    <div class="close_button col-2">
                        <span>
                            <i class="fa fa-times-circle" aria-hidden="true"></i>
                        </span>
                    </div>
                </div>

                <div class="class_content">
                    <div class="wrap col-12">
                        <a href="@Model.Main_Video.Course.PreviewVideo" target="VideoIframe">
                            <div class="list active">
                                <div class="icon">
                                    <i class="fa fa-play" aria-hidden="true"></i>
                                </div>
                                <div class="title">課程介紹</div>
                                @*<div class="time">02:28</div>*@
                            </div>
                        </a>
                    </div>

                    @if (Model.GetOwner)
                    {
                        <!-- 課程章節 -->
                        <div class="accordion" id="accordion">
                            @{foreach (var ch in Model.Main_Video.courseChapters)
                                {
                                    <div class="wrap">
                                        <button class="btn_control btn btn-link btn-block text-left" type="button"
                                                data-toggle="collapse" data-target="#toggle_@ch.ChapterID" aria-expanded="true"
                                                aria-controls="toggle_@ch.ChapterID">
                                            <div class="lists">
                                                <div class="icon">
                                                    <i class="fa fa-th-list" aria-hidden="true"></i>
                                                </div>
                                                <div class="text">第@(ch.ChapterID)章 </div>
                                                <div class="arrow">
                                                    <i class="fa fa-chevron-up" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </button>
                                    </div>
                                    <!-- 課程單元 -->
                                    <div id="toggle_@ch.ChapterID" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                        @foreach (var un in Model.Main_Video.courseUnits)
                                        {
                                            if (ch.ChapterID == un.ChapterID)
                                            {
                                                <div class="content">
                                                    <a href="@un.CourseURL" target="VideoIframe">
                                                        <div class="list">
                                                            <div class="icon">
                                                                <i class="fa fa-play" aria-hidden="true"></i>
                                                            </div>
                                                            <div class="text">單元@(un.UnitID) <span>@un.UnitName</span></div>
                                                            
                                                            @*<div class="time">00:06</div>*@
                                                        </div>
                                                    </a>
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <!-- 課程章節 -->
                        <div class="accordion" id="accordion">
                            @{foreach (var ch in Model.Main_Video.courseChapters)
                                {
                                    <div class="wrap">
                                        <button class="btn_control btn btn-link btn-block text-left" type="button"
                                                data-toggle="collapse" data-target="#toggle_@ch.ChapterID" aria-expanded="true"
                                                aria-controls="toggle_@ch.ChapterID">
                                            <div class="lists">
                                                <div class="icon">
                                                    <i class="fa fa-th-list" aria-hidden="true"></i>
                                                </div>
                                                <div class="text">第@(ch.ChapterID)章 </div>
                                                <div class="arrow">
                                                    <i class="fa fa-chevron-up" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                        </button>
                                    </div>
                                    <!-- 課程單元 -->
                                    <div id="toggle_@ch.ChapterID" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                        @foreach (var un in Model.Main_Video.courseUnits)
                                        {
                                            if (ch.ChapterID == un.ChapterID)
                                            {
                                                <div class="content">
                                                    <a href="/Courses/LockPage" target="VideoIframe">
                                                        <div class="list">
                                                            <div class="icon">
                                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                                            </div>
                                                            <div class="text">
                                                                <div class="text">單元@(un.UnitID) <span>@un.UnitName</span></div>
                                                            </div>


                                                            @*<div class="time">00:06</div>*@
                                                        </div>
                                                    </a>
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
        <div class="list-toggle btn btn-dark"> > 單元一覽</div>
    </div>
</section>

<!-- detail -->
<section class="detail_wrap">
    <div class="container-lg d-flex justify-content-center flex-wrap px-0">
        <div class="sign_wrap col-12 col-md-5 col-lg-5">
            <div class="inline-block">
                <div class="item">
                    <i class="fas fa-users text-white fa-4x"></i>
                    <p>297 位同學</p>
                </div>
                <div class="item">
                    <i class="far fa-comment-dots fa-4x"></i>
                    <p>問題討論</p>
                </div>
            </div>
            <div class="inline-block">
                <div class="item">
                    <i class="far fa-clock fa-4x"></i>
                    <p>@Model.Main_Video.Course.TotalMinTime 分鐘</p>
                </div>
                <div class="item">
                    <i class="far fa-file-alt fa-4x"></i>
                    <p>作業批改</p>
                </div>
            </div>
        </div>

        <div class="price_wrap col-12 col-md-3 col-lg-3">
            <p>課程售價</p>
            <h2>@Model.Main_Video.Course.OriginalPrice.ToString("C0")</h2>
        </div>

        <div class="buy_wrap col-12 col-md-4 col-lg-4">
            <div class="collect">
                <i class="fa fa-bookmark" aria-hidden="true"></i>
                <span class="text-white">心動嗎~</span>
            </div>
            <div class="btn_wrap">
                @if (Model.Main_Video.Course.MemberID != User.Identity.GetUserId())
                {
                    if (Model.GetOwner)
                    {
                        <button class="btn btn-outline-hahow" disabled>已購買</button>
                    }
                    else
                    {
                        if (Request.IsAuthenticated)
                        {
                            if (!Model.GetCarted)
                            {
                                <button class="btn btn-outline-hahow">
                                    <a href="@Url.Action("AddCartOnly", "Member", new { MemberId = ViewBag.MemberId, CourseId = ViewBag.CourseId })" class="btn-outline-hahow border-0 w-100 h-100 text-decoration-none">加入購物車</a>
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-hahow">
                                    <a href="@Url.Action("Cart", "Member")" class="btn-outline-hahow border-0 w-100 h-100 text-decoration-none">已加入購物車，前往付款</a>
                                </button>
                            }
                        }
                        else
                        {
                            <button class="btn btn-outline-hahow">
                                <a href="@Url.Action("Login", "Account", new { returnUrl = Request.RawUrl})" class="btn-outline-hahow border-0 w-100 h-100 text-decoration-none">登入後，加入購物車</a>
                            </button>
                        }
                    }
                }
            </div>
        </div>
    </div>
</section>

