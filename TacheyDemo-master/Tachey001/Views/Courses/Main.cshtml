                        {
                            <h4 class="mr-4 text-50">@Math.Ceiling(@Convert.ToDouble(Model.GetCourseScore.Average(x => x.Score)))</h4>
                        }
                    </div>
                    <div class="score-box text-20 pt-3">
                        <span class="star-show">
                            <i class="fas fa-star star-gray position-relative">
                                @if (Model.GetCourseScore.Average(x => x.Score) > 0)
                                {
                                    <i class="
                            fas
                            fa-star
                            star-yellow
                            position-absolute
                            star-display
                          "></i>
                                }

                            </i>
                            <i class="fas fa-star star-gray position-relative">
                                @if (Model.GetCourseScore.Average(x => x.Score) > 1)
                                {
                                    <i class="
                            fas
                            fa-star
                            star-yellow
                            position-absolute
                            star-display
                          "></i>
                                }

                            </i>
                            <i class="fas fa-star star-gray position-relative">
                                @if (Model.GetCourseScore.Average(x => x.Score) > 2)
                                {
                                    <i class="
                            fas
                            fa-star
                            star-yellow
                            position-absolute
                            star-display
                          "></i>
                                }

                            </i>
                            <i class="fas fa-star star-gray position-relative">
                                @if (Model.GetCourseScore.Average(x => x.Score) > 3)
                                {
                                    <i class="
                            fas
                            fa-star
                            star-yellow
                            position-absolute
                            star-display
                          "></i>
                                }

                            </i>
                            <i class="fas fa-star star-gray position-relative">
                                @if (Model.GetCourseScore.Average(x => x.Score) > 4)
                                {
                                    <i class="
                            fas
                            fa-star
                            star-yellow
                            position-absolute
                            star-display
                          "></i>
                                }
                            </i>
                        </span>
                        <p class="text-white"><span>@Model.GetCourseScore.Count()</span>則評價</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            @if (Model.GetCourseScore.Count == 0)
            {
                <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12 score-content mb-2">
                    <div class="card border-0 score-content">
                        <div class="row no-gutters">
                            <div class="col-12">
                                <div class="card-body">
                                    <h5 class="card-title text-center">
                                        <span class="star-show star-out">
                                            <i class="fas fa-star star-gray position-relative">
                                            </i>
                                            <i class="fas fa-star star-gray position-relative">
                                            </i>
                                            <i class="fas fa-star star-gray position-relative">
                                            </i>
                                            <i class="fas fa-star star-gray position-relative">
                                            </i>
                                            <i class="fas fa-star star-gray position-relative">
                                            </i>
                                        </span>
                                    </h5>
                                    <h2 class="card-title text-secondary text-center">無任何評價</h2>
                                    <p class="card-text text-white text-justify">
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                foreach (var item in Model.GetCourseScore)
                {
                    @Html.Partial("CourseScoreCard", item);
                }
            }

        </div>

    </div>

}
else if (ViewBag.type == "Ques")
{

    <!--問題討論-->
    <!-- content -->
    <div class="container discussions">
        <div class="row">
            <div class="col-xl">
                <div class="layout-right-panel sticky-top">
