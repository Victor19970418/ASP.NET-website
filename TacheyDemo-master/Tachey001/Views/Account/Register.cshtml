    Layout = "~/Views/Shared/_bootstrap.cshtml";
}

<div class="container-fluid pic-height mh-100">
    <div class="row justify-content-center">
        <div class="boxleft  col-lg-5 p-0 bg-orange col-md-5 col-sm-5 col-xs-0">
            <div class="boxleftinner pic-height">
                <div class="none m-3">
                </div>
                <a href="@Url.Action("Index", "Home")">
                    <img src="https://upload.cc/i1/2021/07/19/M8zQHn.png
" alt="" class="my-4 w-15rem">
                </a>
                <p class="m-b-2 " style="        color: #560000
">今天也要透過學習，成為更好的自己</p>
                <img src="https://i.pinimg.com/564x/d4/c4/c1/d4c4c1ca4aabc661f44f22f3d78d7c00.jpg" alt="" class="col-xs-0 flower">
            </div>
        </div>

        <div class="boxright  col-lg-7 p-0 col-md-7 col-sm-0">
            <div class="boxrightinner-1 ">
                <div class="boxrightinner col-lg-5 p-0 col-md-7 col-sm-7">
                    <div class="xs-right-title">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="https://upload.cc/i1/2021/07/19/M8zQHn.png
" alt="" class="my-4 xs-right-img">
                        </a>
                        <b class="m-b-2 text-gray text-center">今天也要透過學習，成為更好的自己</b>

                    </div>

                    <div class="boxrightinnertop ">
                        <div class="boxrightinnertop-fontsize ">
                            <span class="boxrightinnertop-fontsize-singin boxrightinnertop-nowrap">註冊</span>
                        </div>
                        <div class="boxrightinnertop-right d-flex align-items-center boxrightinnertop-nowrap">
                            已經註冊，
                            <a href="@Url.Action("Login", "Account")" class="boxrightinnertop-a boxrightinnertop-nowrap">登入</a>
                        </div>
                    </div>

                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    @*<button class="my-3 b-1-black buttondiv">
                            <div class="button-i">
                                <i class="fab fa-facebook-square " style="color:white;font-size: 33px; "></i>
                            </div>
                            <div class="buttonspan"><span class="spantext ml-3">使用FACEBOOK繼續</span></div>
                        </button>
                        <button class="my-3 b-2-green buttondiv ">
                            <div class="buttonimg">
                                <img src="https://hahow.in/static/media/line-icon.8c2f2751.svg" alt=""
                                     class="lzvlq8-5 iqNXtm buttonimg-img ">
                            </div>
                            <div class="buttonspan"><span class="spantext ml-3">使用LINE繼續&emsp;&emsp;&emsp;</span></div>
                        </button>
                        <button class="my-3 b-3-gray "
                                style="background-color: #000000 opacity 12.0%;border-radius: 4px;border: 1px solid #e4e4e4;">
                            <img alt="Google"
                                 src="data:image/png;base64,"
                                 class="lzvlq8-5 iqNXtm mr-3"><span>使用GOOGLE繼續</span>
                        </button>*@

                    <div class="boxrightinnermiddle d-flex justify-content-center my-3">
                        <div class="text-muted">--</div>
                        <span class="text-muted">或使用 Tachey 帳號密碼註冊</span>
                        <div class="text-muted">--</div>
                    </div>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="boxrightinnermiddle-2">
                            @*<div class="boxrightinnermiddle-2icon">
                                    <i class="fas fa-user"></i>
                                    <input placeholder="帳號(限4-21碼小寫英文數字)" type="text"
                                           class="my-2 boxrightinnermiddle-2-input">
                                </div>*@
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                            <div class="boxrightinnermiddle-2icon boxrightinnermiddle-2icon-email">
                                <i class="far fa-envelope i-email"></i>
                                @Html.TextBoxFor(m => m.Email, new { @class = "my-2 rad" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger " })
                            <div class="boxrightinnermiddle-2icon">
                                <i class="fas fa-unlock-alt"></i>
                                @Html.PasswordFor(m => m.Password, new { @class = "my-2 rad" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                            <div class="boxrightinnermiddle-2icon">
                                <i class="fas fa-unlock-alt"></i>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "my-2 rad" })
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <button class="my-2 d-flex justify-content-center" style="border:0px; border-radius: 5px;">
                                <input type="submit" class="w-100 h-100 border-0" value="註冊" style="border-radius: 5px; padding-left: 1rem; background-color: #46A3FF; color: white; " />
                            </button>
                        </div>

                    }

                    <div class="flex justify-content-center desc marg-tb-10">
                        註冊即同意 <a class="text-link"
                                 target="_blank" href="/privacy">隱私權政策</a> 和 <a class="text-link" target="_blank"
                                                                                href="/terms">使用者條款</a>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var facebookicon = document.querySelector(".fa-facebook-square");
        facebookicon.classList.add("ml-3");
    </script>
}